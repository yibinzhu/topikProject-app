/* pages/setting/setting.wxss */
.setting-bg{
  width:100%;
  height: 440rpx;
  position:absolute;
  z-index: -999;
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.userinfo-container{
  height: 360rpx;
  justify-content: space-between;
  padding-bottom: 50rpx;
  color:white;
}
.setting-check{
  border-radius:80rpx;
  background-color:white;
  color:black;
  font-size:15px;
  padding:10rpx 20rpx;
  opacity:0.8
}
.setting-item{
  padding:40rpx;
}
.item-border{
  border-bottom:1px solid #ececec;
}